<Window x:Class="FirstWpfApplication.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWpfApplication"
        mc:Ignorable="d"
        Title="Window1" Height="150" Width="500">
    <StackPanel>
        <Label Content="Username"  />
        <TextBox x:Name="txtusername"></TextBox>
        <Label Content="Password" />
        <PasswordBox x:Name="pwdpassword"></PasswordBox>
        <Label Content="welcome"></Label>
        <Button Content="Login" Click="Button_Click_1"></Button>
        <Button Content="Register" Click="Button_Click"></Button>
        <Label></Label>
    </StackPanel>
</Window>
