        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWpfApplication"
        mc:Ignorable="d"
        Title="FolderWindows" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="txtusername"></TextBox>
        <Button Content="Create" Click="Button_Click"></Button>
        <Button Content="Load" Click="Button_Click_1"></Button>
        <ComboBox x:Name="cmbuser"></ComboBox>
    </StackPanel>
</Window>
